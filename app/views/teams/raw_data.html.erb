<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Team name</th>
      <th>Played</th>
      <th>Win</th>
      <th>Loose</th>
      <th>Draw</th>
      <th>Goal hit</th>
      <th>Goal against</th>
      <th>Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team['team'] %></td>
        <td><%= team['p'] %></td>
        <td><%= team['w'] %></td>
        <td><%= team['l'] %></td>
        <td><%= team['d'] %></td>
        <td><%= team['f'] %></td>
        <td><%= team['a'] %></td>
        <td><%= team['pts'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
